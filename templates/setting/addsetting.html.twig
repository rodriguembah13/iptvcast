{% extends 'base.html.twig' %}
{% block title %}
    Setting card
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row justify-content-between">
                    <div class="col-md-8">
                        <h4>Setting card</h4>
                    </div>
                    <div class="col-md-4">

                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label for="company" class="form-label">Command</label>
                        <select name="command" class="form-select" id="example-select">
                            <option>Choose Command</option>
                                <option value="11">Activate card</option>
                            <option value="9">Cancel Area Lock</option>
                            <option value="8">Activate Area Lock</option>
                            <option value="3">Reset PIN Code</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Card</label>
                        <input type="text" name="card" class="form-control" id="name" placeholder="Enter card">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light">Save</button>
                    <a type="button"  href="{{ path('app_setting') }}" class="btn btn-danger waves-effect waves-light" >Cancel</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>

    </script>
{% endblock %}
