{% extends 'base.html.twig' %}
{% block title %}
    Reclamations
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row justify-content-between">
                    <div class="col-md-8">
                        <h4>Reclamations</h4>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div id="reclamations" class="table-responsive">{{ 'loading'|trans({}, 'messages') }}</div>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('#reclamations').initDataTables({{ datatable_settings(datatable) }});
        });
    </script>
{% endblock %}


